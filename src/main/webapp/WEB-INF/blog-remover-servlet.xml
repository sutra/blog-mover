<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd"
	default-lazy-init="false">
	<bean id="logoutController"
		class="com.redv.blogremover.web.LogoutController">
	</bean>
	<bean id="readersController"
		class="com.redv.blogremover.web.ReadersController">
		<property name="readers">
			<map>
				<entry key="anonymousSpace"
					value="com.redv.blogremover.bsps.space.AnonymousSpaceReader" />
				<entry key="baidu"
					value="com.redv.blogremover.bsps.baidu.BaiduReader" />
				<entry key="bokee"
					value="com.redv.blogremover.bsps.bokee.BokeeReader" />
				<entry key="csdn"
					value="com.redv.blogremover.bsps.csdn.CSDNBlogReader" />
				<entry key="donews"
					value="com.redv.blogremover.bsps.donews.DoNewsBlogReader" />
				<entry key="hexun"
					value="com.redv.blogremover.bsps.hexun.HexunReader" />
				<entry key="sina"
					value="com.redv.blogremover.bsps.sina.SinaReader" />
				<entry key="sohu"
					value="com.redv.blogremover.bsps.sohu.SohuBlogReader" />
			</map>
		</property>
	</bean>
	<bean id="writersController"
		class="com.redv.blogremover.web.WritersController">
		<property name="writers">
			<map>
				<entry key="baidu"
					value="com.redv.blogremover.bsps.baidu.BaiduWriter" />
				<entry key="csdn"
					value="com.redv.blogremover.bsps.csdn.CSDNBlogWriter" />
				<entry key="donews"
					value="com.redv.blogremover.bsps.donews.DoNewsBlogWriter" />
				<entry key="sina"
					value="com.redv.blogremover.bsps.sina.SinaWriter" />
				<entry key="sohu"
					value="com.redv.blogremover.bsps.sohu.SohuBlogWriter" />
			</map>
		</property>
	</bean>
	<!-- URL Mapping -->
	<bean id="secureHandlerMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="urlMap">
			<map>
				<entry key="/logout.jhtml">
					<ref local="logoutController" />
				</entry>
				<entry key="/readers.jhtml">
					<ref local="readersController" />
				</entry>
				<entry key="/writers.jhtml">
					<ref local="writersController" />
				</entry>
			</map>
		</property>
	</bean>
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/" />
		<property name="suffix" value=".jsp" />
	</bean>
	<!-- 
		<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
		<list>
		<value>com.redv.blogremover.messages</value>
		<value>com.redv.blogremover.bsps.messages-readers</value>
		<value>com.redv.blogremover.bsps.messages-writers</value>
		</list>
		</property>
		</bean>
	-->
	<bean id="localChangeInterceptor"
		class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
		<property name="paramName" value="hl" />
	</bean>

	<bean id="localeResolver"
		class="org.springframework.web.servlet.i18n.SessionLocaleResolver" />
</beans>
